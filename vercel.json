{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/webhook", "dest": "api/webhook.js" },
    { "src": "/api/hello", "dest": "api/hello.js" },
    { "src": "/(.*)", "dest": "server.js" }
  ]
}
 